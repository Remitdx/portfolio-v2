<div data-controller="scorespannel">
  <span class="btn btn-primary" data-scorespannel-target="btn" data-action="click->scorespannel#toggle">Scores</span>
  <ul class="list" data-scorespannel-target="list">
    <% @players.each do |player| %>
      <li><%= player.pseudo  %>, PV : <%= player.pv %></li>
    <% end %>
  </ul>
</div>

<div class="tapisdejeu" data-controller="gamearea">
  <p>C'est au tour de <strong><%= @current_player.pseudo %></strong> de jouer !</p>

  <%= link_to "Jeter les dÃ©s", game_play_path(@game), class:"btn btn-info"%>

  <div data-gamearea-target="list">
    <% unless @dices == [] %>
      <% @dices.each do |dice| %>
        <div class="dice" id="<%= dice.id %>" data-gamearea-target="dice" data-action="click->gamearea#lockdice">
          <span><%= dice.value %> -- <%= dice.locked %></span>
          <div>
            <%= simple_form_for(dice, data: {gamearea_target: "form" }, remote: true) do |f| %>
              <%= f.submit "Lock dice"%>
            <% end %>
          </div>
        </div>
        <% @sum += dice.value %>
      <% end %>
      <%= @sum %>
    <% end %>
  </div>
</div>
